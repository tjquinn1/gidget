<div class="row">
	<div class="small-6 large-centered columns">

		<%= simple_form_for(@job) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		  	<%= f.input :job_title %>
		  	<%= f.input :job_description, as: :text, :input_html => { :cols => 5, :rows => 10 } %>
		  	<%= f.input :job_price, :input_html => {value: number_with_precision(f.object.job_price, precision: 2) }%>

		  </div>

		  <div class="form-actions">
		    <%= f.button :submit %>
		  </div>
		<% end %>
	</div>
</div>