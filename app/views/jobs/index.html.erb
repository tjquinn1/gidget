<div class="row">
  <div class="small-6 large-centered columns">   


<div class="page-header">
  <h1>All of the Jobs</h1>
</div>

<%= link_to "Post a New Status", new_job_path, class: "btn btn-success" %>

<% @jobs.each do |job| %>

  <div class="callout secondary">
    <h5><%= job.job_description %></h5>
    <p><%= job.job_description %></p>
  
  <div class="meta">
    <span class="admin">
      | <%= link_to "Edit", edit_job_path(job) %> | 
      <%= link_to "Delete", job, method: :delete, data: { confirm: "Are you sure your want to delete this status?"} %>
    </span>
  </div>
</div>
<% end %>
  </div>
</div>